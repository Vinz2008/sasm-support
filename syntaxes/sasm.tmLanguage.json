{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sasm",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.sasm",
				"match": "\\b(move|data|text|compare|add|and|launch|char|twoChar|fourChar|interrupt|do-nothing|multiply|push|pop|c-function|global-function|test|jumpzeroflag)\\b"
			},
			{
				"name": "string",
				"match": "\\b(section|start|asm|return|<=)\\b"
			},
			{
				"name": "comment",
				"match": "\\#([\\s\\S]*)$\\b"
			},
			{
				"name": "comment",
				"match": "(?<=asm)\\b.*"
			},
			{
				"name": "storage.type.numeric.sasm",
				"match": "[' ']+[01]?[0-9][0-9]?\\b"
			},
			{
				"name": "meta.definition.function.sasm",
				"match": "(.*)+:\n\\b"
			},
			{
				"name": "constant.numeric.hex.sasm",
				"match": "0x(.*)\\b"
			}

		]
		},
		"strings": {
			"name": "string.quoted.double.sasm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sasm",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.sasm"
}
